{
    "webapp": {
        "name": "junction",
        "slug": "webapp",
        "description": "A data management tool by Wildfire.",
        "api_url": "https://junction.express",
        "interface_urls": {
            "junction": { 
                "title": "Junction", 
                "slug": "junction", 
                "url": "https://junction.express"
            }
        },
        "format": "types.json",
        "version": "1.0",
        "searchable_types": ["section", "page"],
        "allow_type_change": false,
        "display_activity_log": false,
        "soft_delete_records": false
    },
    "section": {
        "name": "section",
        "slug": "section",
        "plural": "sections",
        "description": "List of sections.",
        "readonly": false,
        "sendable": false,
        "editable": true,
        "modules": [
            {
                "input_slug": "title",
                "input_primary": true,
                "input_type": "text",
                "var_type": "string",
                "input_placeholder": "Enter section title",
                "input_unique": false,
                "list_field": true,
                "list_searchable": true,
                "list_sortable": true
            }
        ]
    },
    "page": {
        "name": "page",
        "slug": "page",
        "plural": "pages",
        "description": "List of pages.",
        "readonly": false,
        "sendable": false,
        "editable": true,
        "modules": [
            {
                "input_slug": "title",
                "input_primary": true,
                "input_type": "text",
                "var_type": "string",
                "input_placeholder": "Enter page title",
                "input_unique": false,
                "list_field": true,
                "list_searchable": true,
                "list_sortable": true
            },
            {
                "input_slug": "body",
                "input_placeholder": "Enter content",
                "input_type": "editorjs",
                "var_type": "json"
            },
            {
                "input_slug": "section",
                "input_placeholder": "Select section",
                "input_type": "select",
                "var_type": "string"
            },
            {
                "input_slug": "publishing_date",
                "input_placeholder": "Enter publishing date",
                "input_type": "date",
                "var_type": "string",
                "list_field": true,
                "list_searchable": true,
                "list_sortable": true
            },
            {
                "input_slug": "pinned",
                "input_type": "checkbox",
                "var_type": "bool",
                "input_placeholder": "Pin to top",
                "list_field": true,
                "list_search": false,
                "list_sort": true
            },
            {
                "input_slug": "cover_url",
                "input_placeholder": "Enter content cover URL",
                "input_type": "url",
                "var_type": "string"
            },
            {
                "input_slug": "files",
                "input_placeholder": "Upload files",
                "input_type": "file_uploader"
            }
        ]
    }
}
